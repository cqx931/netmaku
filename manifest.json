{
    "name": "net://maku",
    "description": "A browser extension that uses the volatile danmaku to bridge the visible content and the hidden code in the browser window, blending the boundary between human reading and machine reading.",
    "version": "0.0.1",
    "author": "Qianxun Chen",
    "background":
    {
        "scripts": ["js/jquery.min.js", "js/background.js"]
    },
    "content_scripts": [
    {
        "matches": ["http://*/*", "https://*/*"], 
        "js": ["js/documentStart.js"], 
        "run_at": "document_start",
        "all_frames": false
    }, 
    {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["js/jquery.min.js","js/danmaku.js","js/contentscript.js"],
        "css": ["css/contentPage.css"],
        "run_at": "document_end",
        "all_frames": false
    }],
    "browser_action":
    {
        "default_icon":
        {
            "16": "img/icon_16.png",
             "128": "img/icon_128.png"
        },
        "default_title": "net://maku",
        "default_popup": "menu.html"
    },
    "icons":
    {
        "16": "img/icon_16.png",
        "128": "img/icon_128.png"
    },
    "minimum_chrome_version": "38.0",
    "permissions": [
        "notifications",
        "storage", 
        "browsingData", 
        "webNavigation", 
        "debugger",
        "tabs",
        "webRequest",
        "<all_urls>"
    ],
       "web_accessible_resources": [ "js/console.js","js/danmaku.js"],
    "manifest_version": 2
}